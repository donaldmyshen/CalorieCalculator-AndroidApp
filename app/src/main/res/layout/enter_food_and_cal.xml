<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/Enter_food_and_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="24sp"
            android:text="Enter Food and its Calories"
            tools:ignore="MissingConstraints"/>
    <EditText
            android:id="@+id/food_and_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Enter_food_and_cal"
            android:padding="30dp"
            android:textSize="18sp"
            android:hint="Enter Food"/>

    <EditText
            android:id="@+id/Calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/food_and_cal"
            android:hint="Enter Calories"/>


    <Button
            android:id="@+id/confirm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            app:layout_constraintTop_toBottomOf="@id/Calories"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            tools:layout_editor_absoluteX="39dp" app:layout_constraintVertical_bias="0.111"/>

</android.support.constraint.ConstraintLayout>