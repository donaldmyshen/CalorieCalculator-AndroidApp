<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

    <TextView
            android:text="Calories Remaining:"
            android:textColor="@color/colorText"
            android:layout_width="348dp"
            android:layout_height="38dp"
            android:id="@+id/remaining"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="60dp" android:layout_marginRight="60dp"
            app:layout_constraintEnd_toEndOf="parent"

    />
    <TextView
            android:text=""
            android:layout_width="98dp"
            android:layout_height="35dp"
            android:id="@+id/calories"
            android:textSize="26sp"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/remaining" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>


    <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="666dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calories"/>


    <TextView
            android:text="Total Calories:"
            android:layout_width="301dp"
            android:layout_height="35dp"
            android:id="@+id/totalCal"
            android:textSize="26sp"
            android:textColor="@color/colorText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.029" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="452dp"/>
    <Button
            android:text="ADD FOOD ITEM"
            android:textColor="@color/colorText"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFood"
            android:background="#11000000"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="17dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/totalCal"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/addSport"/>
    <Button
            android:text="RESET PLAN"
            android:textColor="@color/colorText"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset_plan"
            android:background="#11000000"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="17dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addFood" app:layout_constraintVertical_bias="0.065"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/addSport"
            app:layout_constraintHorizontal_bias="0.734"/>
    <Button
            android:text="ADD SPORT ITEM"
            android:textColor="@color/colorText"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/totalCal" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.044" android:id="@+id/addSport"/>
</android.support.constraint.ConstraintLayout>